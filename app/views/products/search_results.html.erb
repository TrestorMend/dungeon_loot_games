<h2>Search Results</h2>

<% if @products.empty? %>
  <p>
    Sorry your search for '<%= params[:keywords] %>' returned no results.
  </p>
<% else %>
  <% @products.each do |product| %>
    <div class="product">
      <h2><%= link_to product.name, product%></h2>
      
      <% if product.image.present? %>
        <p><%= image_tag product.image.medium.url %></p>
      <% end %>
      
      <p><strong>Price:</strong> <%= number_to_currency product.price %></p> 
    </div>
  <% end %>
<% end %>



