<h2>All Products</h2>

<h2>Product Search</h2>

<%= form_tag search_results_path do %>
  <%= text_field_tag :keywords %>
  <%= submit_tag 'Search' %>
<% end %>

<% @products.each do |product| %>
  <div class="product">
    <h2><%= link_to product.name, product%></h2>
    
    <% if product.image.present? %>
      <p><%= image_tag product.image.medium.url %></p>
    <% end %>
    
    <p><strong>Price:</strong> <%= number_to_currency product.price %></p> 
  </div>
<% end %>



