<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= link_to product.name, product%></h4>
      <% if product.image.present? %>
        <p><%= image_tag product.image.medium.url %></p>
      <% end %>
    </div>
    <div class="col-xs-4">
      
      <%= form_for order_item, remote: true, html: { id: nil } do |f| %>      
      <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency product.price %></span></h4>
        <div class="input-group">
          <%= f.number_field :quantity, value: 1, id: "nf" + product.id.to_s, class: "form-control", min: 1 %>
          <div class="input-group-btn">
            <%= f.hidden_field :product_id, value: product.id, id: product.id %>
            <%= f.submit "Add to Cart", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
    
  </div>
</div>